<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
  <servlet>
      <servlet-name>trans</servlet-name>
      <servlet-class>sanskritnlp.servlet.Transliterate</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>pratyAhArI</servlet-name>
      <servlet-class>sanskritnlp.servlet.pratyAhArI</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>pratyAhArI</servlet-name>
      <url-pattern>/api/pratyAhara</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>trans</servlet-name>
      <url-pattern>/api/trans</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
      <welcome-file>index.htm</welcome-file>
  </welcome-file-list>
</web-app>
